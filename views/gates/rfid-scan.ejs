<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>TerraConnection - RFID Scanner</title>
  <link rel="stylesheet" href="/css/app.css">
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Roboto', sans-serif;
      background-color: #f8f9fa;
      text-align: center;
      margin: 0;
      padding: 20px;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .container {
      max-width: 800px;
      width: 100%;
      margin: 0 auto;
    }

    h1 {
      margin-top: 2rem;
      color: #2c3e50;
      font-weight: 500;
    }

    .scanner-container {
      background: white;
      padding: 2rem;
      border-radius: 12px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      margin: 2rem auto;
      width: 90%;
      max-width: 500px;
      position: relative;
    }

    #rfidInput {
      position: absolute;
      opacity: 0;
      pointer-events: none;
    }

    .scan-message {
      font-size: 1.5rem;
      color: #666;
      margin: 20px 0;
      padding: 15px;
    }

    .status-indicator {
      display: inline-block;
      width: 12px;
      height: 12px;
      border-radius: 50%;
      margin-right: 8px;
      background-color: #2ecc71;
      animation: pulse 2s infinite;
    }

    @keyframes pulse {
      0% { transform: scale(1); opacity: 1; }
      50% { transform: scale(1.2); opacity: 0.8; }
      100% { transform: scale(1); opacity: 1; }
    }

    .status-text {
      color: #666;
      font-size: 0.9rem;
      margin-top: 10px;
    }

    #studentModal {
      display: none;
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      background-color: #fff;
      border-radius: 16px;
      padding: 30px;
      z-index: 1000;
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
      width: 90%;
      max-width: 400px;
      text-align: center;
    }

    #studentModal img {
      width: 120px;
      height: 120px;
      border-radius: 50%;
      margin-bottom: 20px;
      object-fit: cover;
      border: 4px solid #f8f9fa;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .student-name {
      font-size: 1.8rem;
      color: #2c3e50;
      margin: 10px 0;
      font-weight: 500;
    }

    .student-details {
      color: #666;
      margin: 5px 0;
      font-size: 1.1rem;
    }

    .event-tag {
      display: inline-block;
      background-color: #3498db;
      color: white;
      padding: 8px 16px;
      border-radius: 20px;
      margin-top: 15px;
      font-size: 0.9rem;
    }

    .loading-overlay {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(255, 255, 255, 0.8);
      z-index: 999;
      justify-content: center;
      align-items: center;
    }

    .spinner {
      width: 40px;
      height: 40px;
      border: 4px solid #f3f3f3;
      border-top: 4px solid #3498db;
      border-radius: 50%;
      animation: spin 1s linear infinite;
    }

    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }

    .error-message {
      background-color: #ff6b6b;
      color: white;
      padding: 15px;
      border-radius: 8px;
      margin: 10px auto;
      max-width: 400px;
      display: none;
    }

    .success-scan {
      animation: successPulse 0.5s ease-out;
    }

    @keyframes successPulse {
      0% { transform: scale(1); }
      50% { transform: scale(1.05); }
      100% { transform: scale(1); }
    }
  </style>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
  <div class="container">
    <div class="scanner-container">
      <div class="status-indicator"></div>
      <span class="status-text">Scanner Ready</span>
      <div class="scan-message">Please scan your RFID card</div>
      <input type="text" id="rfidInput" placeholder="Scan RFID card here" autofocus>
    </div>

    <div class="error-message" id="errorMessage"></div>
  </div>

  <div id="studentModal">
    <div id="studentInfo"></div>
  </div>

  <div class="loading-overlay">
    <div class="spinner"></div>
  </div>

  <script>
    $(document).ready(function() {
      let scanning = false;
      const $rfidInput = $('#rfidInput');
      const $loadingOverlay = $('.loading-overlay');
      const $errorMessage = $('#errorMessage');
      const $statusText = $('.status-text');

      function showError(message) {
        $errorMessage.text(message).fadeIn().delay(3000).fadeOut();
      }

      function updateStatus(text, isError = false) {
        $statusText.text(text);
        $('.status-indicator').css('background-color', isError ? '#ff6b6b' : '#2ecc71');
      }

      $rfidInput.focus();
      $(document).click(function() {
        $rfidInput.focus();
      });

      $rfidInput.on('keypress', function(e) {
        if (e.which === 13 && !scanning) {
          e.preventDefault();
          scanning = true;
          const uid = $(this).val().trim();
          $(this).val('');
          
          if (!uid) {
            showError('No RFID data detected');
            scanning = false;
            return;
          }

          updateStatus('Processing scan...');
          $loadingOverlay.css('display', 'flex');

          $.ajax({
            url: '/api/rfid/scan',
            method: 'POST',
            contentType: 'application/json',
            data: JSON.stringify({ card_uid: uid }),
            success: function(response) {
              if (response && response.user) {
                const user = response.user;
                $('#studentInfo').html(`
                  <img src="${user.profile_picture}" alt="${user.first_name}'s photo" onerror="this.src='/images/default-avatar.png'">
                  <h2 class="student-name">${user.first_name} ${user.last_name}</h2>
                  <p class="student-details">ID: ${user.school_id}</p>
                  <div class="event-tag">${response.event}</div>
                `);
                $('#studentModal').fadeIn(200).addClass('success-scan');
                updateStatus('Scan successful');
                
                setTimeout(function() {
                  $('#studentModal').fadeOut(200);
                  updateStatus('Scanner Ready');
                }, 5000);
              } else {
                showError('Student information not found');
                updateStatus('Scanner Ready');
              }
            },
            error: function(err) {
              console.error("Scan error:", err);
              showError('Error processing scan. Please try again.');
              updateStatus('Scanner Ready', true);
            },
            complete: function() {
              scanning = false;
              $loadingOverlay.hide();
            }
          });
        }
      });

      // Close modal on click
      $('#studentModal').on('click', function() {
        $(this).fadeOut(200);
        updateStatus('Scanner Ready');
      });

      // Handle window focus/blur
      $(window).on('focus', function() {
        updateStatus('Scanner Ready');
        $rfidInput.focus();
      }).on('blur', function() {
        updateStatus('Scanner Inactive', true);
      });
    });
  </script>
</body>
</html>
