<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>RFID Scanner - Gates</title>
  <link rel="stylesheet" href="/css/app.css">
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f4f4;
      text-align: center;
      margin: 0;
      padding: 0;
    }
    h1 {
      margin-top: 2rem;
    }
    #rfidInput {
      font-size: 2rem;
      padding: 10px;
      width: 300px;
      margin: 20px auto;
      display: block;
      border: 2px solid #333;
      border-radius: 4px;
    }
    #studentModal {
      display: none;
      position: fixed;
      top: 30%;
      left: 50%;
      transform: translate(-50%, -30%);
      background-color: #fff;
      border: 2px solid #333;
      padding: 20px;
      z-index: 1000;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
      width: 300px;
      border-radius: 8px;
    }
    #studentModal img {
      max-width: 100px;
      border-radius: 50%;
      margin-bottom: 10px;
    }
  </style>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
  <h1>RFID Scanner</h1>
  <p>Please scan your RFID card below.</p>
  <input type="text" id="rfidInput" placeholder="Scan RFID card here" autofocus>
  
  <div id="studentModal">
    <div id="studentInfo"></div>
  </div>
  
  <script>
    $(document).ready(function() {
      // Ensure the input is always focused
      $('#rfidInput').focus();
      
      $('#rfidInput').on('keypress', function(e) {
        console.log("Key pressed: ", e.which);  
        if (e.which === 13) { 
          e.preventDefault();
          var uid = $(this).val().trim();
          console.log("Scanned UID: ", uid); 
          $(this).val(''); 

          $.ajax({
            url: '/api/rfid/scan',
            method: 'POST',
            contentType: 'application/json',
            data: JSON.stringify({ card_uid: uid }),
            success: function(response) {
              console.log("AJAX success, response: ", response); 
              if (response && response.user) {
                var user = response.user;
                $('#studentInfo').html(
                  '<h2>' + user.first_name + ' ' + user.last_name + '</h2>' +
                  '<img src="' + user.profile_picture + '" alt="Profile Picture">' +
                  '<p>ID: ' + user.id + '</p>' +
                  '<p>Event: ' + response.event + '</p>'
                );
                $('#studentModal').fadeIn(100);
                // hide
                setTimeout(function() {
                  $('#studentModal').fadeOut(200);
                }, 10000);
              } else {
                alert('Student information not found.');
              }
            },
            error: function(err) {
              console.error("AJAX error: ", err);
              alert('Error processing scan.');
            }
          });
        }
      });
      
      // hide after next scan
      $('#studentModal').on('click', function() {
        $(this).fadeOut(200);
      });
    });
  </script>
</body>
</html>
