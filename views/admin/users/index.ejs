<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Manage Users</title>
  <link rel="stylesheet" href="/css/app.css">
</head>
<body>
  <div class="container mt-5">
    <h2>Users</h2>
    <a href="/admin/users/create" class="btn btn-success mb-3">Add New User</a>
    <a href="/admin/users/import" class="btn btn-info mb-3">Import Users</a>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Email</th>
          <th>Role</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach(function(user){ %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.first_name %> <%= user.last_name %></td>
            <td><%= user.email %></td>
            <td><%= user.role %></td>
            <td>
              <a href="/admin/users/<%= user.id %>" class="btn btn-info btn-sm">View</a>
              <a href="/admin/users/<%= user.id %>/edit" class="btn btn-warning btn-sm">Edit</a>
              <form action="/admin/users/<%= user.id %>?_method=DELETE" method="POST" style="display:inline-block">
                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
