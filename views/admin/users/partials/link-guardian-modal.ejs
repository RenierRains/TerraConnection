<!-- Link Guardian Modal -->
<div class="modal fade" id="linkGuardianModal" tabindex="-1" aria-labelledby="linkGuardianModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="linkGuardianModalLabel">Link Guardian</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form id="linkGuardianForm">
          <div class="form-group">
            <label for="guardianSelect">Select Guardian</label>
            <select id="guardianSelect" class="form-control" required>
              <option value="">Choose a guardian...</option>
              <% availableGuardians.forEach(function(guardian) { %>
                <option value="<%= guardian.id %>">
                  <%= guardian.first_name %> <%= guardian.last_name %> (<%= guardian.email %>)
                </option>
              <% }); %>
            </select>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary" onclick="submitLinkGuardian()">Link Guardian</button>
      </div>
    </div>
  </div>
</div>

<script>
async function submitLinkGuardian() {
  const guardianId = document.getElementById('guardianSelect').value;
  if (!guardianId) {
    alert('Please select a guardian');
    return;
  }

  try {
    const response = await fetch('/admin/guardian-links/link', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({
        guardianId,
        studentId: '<%= user.id %>'
      })
    });

    if (response.ok) {
      location.reload();
    } else {
      const data = await response.json();
      alert(data.error || 'Failed to link guardian');
    }
  } catch (error) {
    console.error('Error:', error);
    alert('Failed to link guardian');
  }
}
</script> 