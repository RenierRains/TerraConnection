      background: linear-gradient(135deg, var(--bs-primary), var(--primary-light));
      color: white;
      padding: 1.5rem;
      border-radius: 0.5rem;
      margin-bottom: 2rem;
    }

    .card-icon-large {
      font-size: 2.5rem;
      opacity: 0.9;
    }

    .badge-large {
      font-size: 0.9rem;
      padding: 0.5rem 1rem;
    }

    .quick-stats .stat-card {
      background: var(--bs-body-bg);
