<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Manage RFID Cards</title>
  <link rel="stylesheet" href="/css/app.css">
</head>
<body>
  <div class="container mt-5">
    <h2>RFID Cards</h2>
    <a href="/admin/rfid-cards/create" class="btn btn-success mb-3" data-modal="true">Add New RFID Card</a>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>ID</th>
          <th>Card UID</th>
          <th>User ID</th>
          <th>Active</th>
          <th>Issued At</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% rfidCards.forEach(function(card) { %>
          <tr>
            <td><%= card.id %></td>
            <td><%= card.card_uid %></td>
            <td><%= card.user_id %></td>
            <td><%= card.is_active ? 'Yes' : 'No' %></td>
            <td><%= card.issued_at %></td>
            <td>
              <a href="/admin/rfid-cards/<%= card.id %>" class="btn btn-info btn-sm" data-modal="true">View</a>
              <a href="/admin/rfid-cards/<%= card.id %>/edit" class="btn btn-warning btn-sm" data-modal="true">Edit</a>
              <form action="/admin/rfid-cards/<%= card.id %>?_method=DELETE" method="POST" style="display:inline;">
                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">Delete</button>
              </form>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</body>
</html>
