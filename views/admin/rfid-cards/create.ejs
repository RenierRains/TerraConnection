<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Create RFID Card</title>
  <link rel="stylesheet" href="/css/app.css">
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <style>
    #student_suggestions {
      border: 1px solid #ccc;
      max-height: 200px;
      overflow-y: auto;
      background: #fff;
      position: absolute;
      width: calc(100% - 20px);
      z-index: 1000;
    }
    .suggestion-item {
      padding: 5px 10px;
      cursor: pointer;
    }
    .suggestion-item:hover {
      background-color: #f0f0f0;
    }
    .autocomplete-container {
      position: relative;
    }
  </style>
</head>
<body>
  <%- include('../../partials/modal-styles') %>

  <div class="modal-content-wrapper">
    <h2>Create RFID Card</h2>
    <form action="/admin/rfid-cards" method="POST">
      <div class="form-group">
        <label for="card_uid">Card UID</label>
        <input type="text" id="card_uid" name="card_uid" class="form-control" required>
      </div>
      
      <div class="form-group autocomplete-container">
        <label for="student_search">Assign to Student</label>
        <input type="text" id="student_search" class="form-control" placeholder="Type student name or email">
        <input type="hidden" name="user_id" id="user_id">
        <div id="student_suggestions" class="suggestions"></div>
      </div>
      
      <div class="form-group">
        <label for="is_active">Is Active?</label>
        <select id="is_active" name="is_active" class="form-control">
          <option value="true" selected>Yes</option>
          <option value="false">No</option>
        </select>
      </div>
      
      <div class="button-group">
        <button type="submit" class="btn btn-primary">Create RFID Card</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
      </div>
    </form>
  </div>

  <script>
    $(document).ready(function(){
      $('#student_search').on('input', function(){
        const query = $(this).val().trim();
        if(query.length < 3){
          $('#student_suggestions').empty();
          return;
        }
        $.ajax({
          url: '/admin/students/search',
          data: { q: query },
          success: function(data){
            const suggestions = data.students;
            let html = '';
            suggestions.forEach(function(student){
              html += `<div class="suggestion-item" data-id="${student.id}">${student.first_name} ${student.last_name} (${student.email})</div>`;
            });
            $('#student_suggestions').html(html);
          },
          error: function(err){
            console.error(err);
          }
        });
      });
    
      $('#student_suggestions').on('click', '.suggestion-item', function(){
        const studentId = $(this).data('id');
        const studentText = $(this).text();
        $('#user_id').val(studentId);
        $('#student_search').val(studentText);
        $('#student_suggestions').empty();
      });

      // Override the default modal form submission for this specific form
      $('form[action="/admin/rfid-cards"]').on('submit', function(e) {
        e.preventDefault();
        const form = $(this);
        const submitBtn = form.find('button[type="submit"]');
        const originalText = submitBtn.text();
        
        submitBtn.prop('disabled', true).html('<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Processing...');
        
        // Use serialize() instead of FormData for better compatibility
        const formData = form.serialize();
        
        console.log('Form data being sent:', formData);
        
        $.ajax({
          url: form.attr('action'),
          method: form.attr('method') || 'POST',
          data: formData,
          headers: {
            'X-Requested-With': 'XMLHttpRequest',
            'Content-Type': 'application/x-www-form-urlencoded'
          },
          success: function(response) {
            // Use Bootstrap 5 modal instance instead of jQuery modal
            const modalElement = document.getElementById('appModal');
            if (modalElement) {
              const modalInstance = bootstrap.Modal.getInstance(modalElement);
              if (modalInstance) {
                modalInstance.hide();
              }
            }
            
            if (window.showToast) {
              window.showToast('Success!', 'RFID card created successfully.', 'success');
            }
            setTimeout(() => window.location.reload(), 1000);
          },
          error: function(xhr) {
            submitBtn.prop('disabled', false).text(originalText);
            
            const errorMsg = xhr.responseText || 'An error occurred. Please try again.';
            if (window.showToast) {
              window.showToast('Error', errorMsg, 'error');
            }
            
            const alertHtml = '<div class="alert alert-danger alert-dismissible fade show" role="alert">' +
              errorMsg +
              '<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>' +
              '</div>';

            form.find('.alert').remove();
            form.prepend(alertHtml);
          }
        });
      });
    });
  </script>
</body>
</html>
