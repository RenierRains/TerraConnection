<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TerraConnection - Visitor Kiosk</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #6a0dad;
            --primary-light: #8a2be2;
            --secondary-color: #9400d3;
            --accent-color: #4b0082;
            --success-color: #28a745;
            --danger-color: #dc3545;
            --warning-color: #ffc107;
            --info-color: #17a2b8;
            --text-dark: #2c3e50;
            --text-light: #6c757d;
            --bg-light: #f8f9fa;
            --border-color: #e9ecef;
        }

        @keyframes gradientBG {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes pulse {
            0% { transform: scale(1); }
            50% { transform: scale(1.05); }
            100% { transform: scale(1); }
        }

        @keyframes float {
            0%, 100% { transform: translateY(0px); }
            50% { transform: translateY(-10px); }
        }

        body {
            background: linear-gradient(-45deg, #6a0dad, #4b0082, #8a2be2, #9400d3);
            background-size: 400% 400%;
            animation: gradientBG 15s ease infinite;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            min-height: 100vh;
            margin: 0;
            padding: 0;
            overflow-x: hidden;
        }

        .kiosk-container {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem 1rem;
        }

        .kiosk-main-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 25px;
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
            animation: fadeInUp 0.8s ease-out;
            max-width: 800px;
            width: 100%;
            overflow: hidden;
        }

        .kiosk-header {
            background: linear-gradient(135deg, #6a0dad, #8a2be2);
            color: white;
            padding: 3rem 2rem;
            text-align: center;
            position: relative;
            overflow: hidden;
        }

        .kiosk-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grid" width="10" height="10" patternUnits="userSpaceOnUse"><path d="M 10 0 L 0 0 0 10" fill="none" stroke="rgba(255,255,255,0.1)" stroke-width="0.5"/></pattern></defs><rect width="100" height="100" fill="url(%23grid)"/></svg>');
            opacity: 0.3;
        }

        .kiosk-header > * {
            position: relative;
            z-index: 2;
        }

        .kiosk-header img {
            max-width: 250px;
            max-height: 100px;
            width: auto;
            height: auto;
            margin-bottom: 1.5rem;
            transition: all 0.3s ease;
            animation: float 3s ease-in-out infinite;
        }

        .kiosk-header h1 {
            font-size: 3rem;
            font-weight: 700;
            margin-bottom: 1rem;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
        }

        .kiosk-header p {
            font-size: 1.3rem;
            opacity: 0.9;
            margin: 0;
            font-weight: 300;
        }

        .kiosk-body {
            padding: 4rem 3rem;
        }

        .welcome-message {
            text-align: center;
            margin-bottom: 3rem;
        }

        .welcome-message h2 {
            color: var(--text-dark);
            font-size: 2.2rem;
            font-weight: 600;
            margin-bottom: 1rem;
        }

        .welcome-message p {
            color: var(--text-light);
            font-size: 1.2rem;
            margin: 0;
        }

        .options-container {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 2rem;
            margin-top: 2rem;
        }

        .option-card {
            background: rgba(255, 255, 255, 0.8);
            border-radius: 20px;
            padding: 3rem 2rem;
            text-align: center;
            transition: all 0.3s ease;
            border: 3px solid transparent;
            cursor: pointer;
            text-decoration: none;
            color: inherit;
            position: relative;
            overflow: hidden;
        }

        .option-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(135deg, transparent, rgba(106, 13, 173, 0.05));
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .option-card:hover::before {
            opacity: 1;
        }

        .option-card:hover {
            transform: translateY(-8px) scale(1.02);
            box-shadow: 0 20px 50px rgba(106, 13, 173, 0.2);
            border-color: var(--primary-color);
            text-decoration: none;
            color: inherit;
        }

        .entry-card {
            border-left: 5px solid var(--success-color);
        }

        .entry-card:hover {
            border-color: var(--success-color);
            box-shadow: 0 20px 50px rgba(40, 167, 69, 0.2);
        }

        .exit-card {
            border-left: 5px solid var(--danger-color);
        }

        .exit-card:hover {
            border-color: var(--danger-color);
            box-shadow: 0 20px 50px rgba(220, 53, 69, 0.2);
        }

        .option-icon {
            font-size: 4rem;
            margin-bottom: 1.5rem;
            display: block;
            transition: all 0.3s ease;
        }

        .entry-card .option-icon {
            color: var(--success-color);
        }

        .exit-card .option-icon {
            color: var(--danger-color);
        }

        .option-card:hover .option-icon {
            animation: pulse 1s ease-in-out infinite;
        }

        .option-title {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 1rem;
            color: var(--text-dark);
            position: relative;
            z-index: 2;
        }

        .option-description {
            font-size: 1.1rem;
            color: var(--text-light);
            line-height: 1.6;
            position: relative;
            z-index: 2;
        }

        .footer-info {
            text-align: center;
            margin-top: 3rem;
            padding-top: 2rem;
            border-top: 2px solid var(--border-color);
        }

        .footer-info p {
            color: var(--text-light);
            font-size: 1rem;
            margin: 0.5rem 0;
        }

        .footer-info .time-display {
            font-size: 1.2rem;
            font-weight: 600;
            color: var(--primary-color);
            margin-top: 1rem;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .kiosk-container {
                padding: 1rem;
            }

            .kiosk-header {
                padding: 2rem 1.5rem;
            }

            .kiosk-header h1 {
                font-size: 2.2rem;
            }

            .kiosk-header p {
                font-size: 1.1rem;
            }

            .kiosk-body {
                padding: 2rem 1.5rem;
            }

            .welcome-message h2 {
                font-size: 1.8rem;
            }

            .welcome-message p {
                font-size: 1rem;
            }

            .options-container {
                grid-template-columns: 1fr;
                gap: 1.5rem;
            }

            .option-card {
                padding: 2rem 1.5rem;
            }

            .option-icon {
                font-size: 3rem;
            }

            .option-title {
                font-size: 1.5rem;
            }

            .option-description {
                font-size: 1rem;
            }
        }

        /* Accessibility */
        .option-card:focus {
            outline: 3px solid var(--primary-color);
            outline-offset: 2px;
        }

        /* Loading animation for when navigating */
        .loading {
            opacity: 0.7;
            pointer-events: none;
        }

        .loading .option-icon {
            animation: pulse 1s ease-in-out infinite;
        }
    </style>
</head>
<body>
    <div class="kiosk-container">
        <div class="kiosk-main-card">
            <!-- Header -->
            <div class="kiosk-header">
                <img src="/logo.png" alt="TerraConnection" id="logo" onerror="this.style.display='none'">
                <h1>TerraConnection</h1>
                <p>Visitor Management System</p>
            </div>

            <!-- Body -->
            <div class="kiosk-body">
                <!-- Welcome Message -->
                <div class="welcome-message">
                    <h2>Welcome to TerraConnection</h2>
                    <p>Please select an option below to continue</p>
                </div>

                <!-- Options -->
                <div class="options-container">
                    <!-- Entry Option -->
                    <a href="/kiosk/entry" class="option-card entry-card" id="entryOption">
                        <i class="fas fa-sign-in-alt option-icon"></i>
                        <h3 class="option-title">Visitor Entry</h3>
                        <p class="option-description">
                            Register as a new visitor by providing your information and taking a photo for identification.
                        </p>
                    </a>

                    <!-- Exit Option -->
                    <a href="/kiosk/exit" class="option-card exit-card" id="exitOption">
                        <i class="fas fa-sign-out-alt option-icon"></i>
                        <h3 class="option-title">Visitor Exit</h3>
                        <p class="option-description">
                            Complete your visit by verifying your identity and checking out of the facility.
                        </p>
                    </a>
                </div>

                <!-- Footer Info -->
                <div class="footer-info">
                    <p><i class="fas fa-shield-alt"></i> Secure face recognition technology</p>
                    <p><i class="fas fa-clock"></i> Quick and easy process</p>
                    <p><i class="fas fa-headset"></i> Need help? Contact the reception desk</p>
                    <div class="time-display" id="currentTime"></div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        class KioskMain {
            constructor() {
                this.initializeTimeDisplay();
                this.initializeOptionHandlers();
                this.initializeAccessibility();
            }

            initializeTimeDisplay() {
                const updateTime = () => {
                    const now = new Date();
                    const timeString = now.toLocaleString('en-US', {
                        weekday: 'long',
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric',
                        hour: '2-digit',
                        minute: '2-digit',
                        second: '2-digit'
                    });
                    
                    const timeElement = document.getElementById('currentTime');
                    if (timeElement) {
                        timeElement.textContent = timeString;
                    }
                };

                // Update immediately and then every second
                updateTime();
                setInterval(updateTime, 1000);
            }

            initializeOptionHandlers() {
                const entryOption = document.getElementById('entryOption');
                const exitOption = document.getElementById('exitOption');

                if (entryOption) {
                    entryOption.addEventListener('click', (e) => {
                        this.handleOptionClick(e, 'entry');
                    });
                }

                if (exitOption) {
                    exitOption.addEventListener('click', (e) => {
                        this.handleOptionClick(e, 'exit');
                    });
                }
            }

            handleOptionClick(event, type) {
                const card = event.currentTarget;
                
                // Add loading state
                card.classList.add('loading');
                
                // Visual feedback
                const icon = card.querySelector('.option-icon');
                if (icon) {
                    icon.style.animation = 'pulse 0.5s ease-in-out infinite';
                }

                // Small delay for visual feedback before navigation
                setTimeout(() => {
                    // Navigation will happen automatically due to href
                }, 200);
            }

            initializeAccessibility() {
                // Add keyboard navigation support
                const optionCards = document.querySelectorAll('.option-card');
                
                optionCards.forEach(card => {
                    card.addEventListener('keydown', (e) => {
                        if (e.key === 'Enter' || e.key === ' ') {
                            e.preventDefault();
                            card.click();
                        }
                    });

                    // Make cards focusable
                    card.setAttribute('tabindex', '0');
                    card.setAttribute('role', 'button');
                });

                // Add ARIA labels
                document.getElementById('entryOption')?.setAttribute('aria-label', 'Start visitor entry process');
                document.getElementById('exitOption')?.setAttribute('aria-label', 'Start visitor exit process');
            }
        }

        // Initialize the kiosk main page when DOM is loaded
        document.addEventListener('DOMContentLoaded', () => {
            new KioskMain();
            console.log('TerraConnection Kiosk Main Page initialized');
        });

        // Handle page visibility changes (for kiosk mode)
        document.addEventListener('visibilitychange', () => {
            if (document.visibilityState === 'visible') {
                // Refresh time display when page becomes visible again
                const event = new Event('focus');
                window.dispatchEvent(event);
            }
        });

        // Error handling for logo image
        document.getElementById('logo')?.addEventListener('error', function() {
            this.style.display = 'none';
        });

        // Prevent right-click and other shortcuts in kiosk mode
        document.addEventListener('contextmenu', e => e.preventDefault());
        document.addEventListener('keydown', e => {
            // Disable F12, Ctrl+Shift+I, Ctrl+U, etc. for kiosk mode
            if (e.key === 'F12' || 
                (e.ctrlKey && e.shiftKey && e.key === 'I') ||
                (e.ctrlKey && e.key === 'u')) {
                e.preventDefault();
            }
        });
    </script>
</body>
</html>
